{
  "compilerOptions": {
   

    /* Language and Environment */
    "target": "es2016",                                
    /* Modules */
    "module": "commonjs",                                
    "rootDir": "./src",                                 
                                    
    "outDir": "./dist",                                 
              
    "esModuleInterop": true,                            
    // "preserveSymlinks": true,                         
    "forceConsistentCasingInFileNames": true,           

    /* Type Checking */
    "strict": true,                                      
    
    "skipLibCheck": true,                             
  },
  "include": [
    "src/**/*",
    "/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".gitignore",
  ]
}
